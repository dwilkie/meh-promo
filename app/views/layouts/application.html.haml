!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang=>"en"}
  %head
    %meta{:charset=>"utf-8"}
    %title Meh Promo
    = stylesheet_link_tag "application"
    = javascript_include_tag :all
    = javascript_include_tag "http://platform.twitter.com/widgets.js"
    = csrf_meta_tag
  %body
    %div#right_side
      %p#contact
        = mail_to "dwilkie@gmail.com", "Contact", :encode => "hex", :subject => "meh web-app"
      %p#external_services
        %a{:class => "DiggThisButton DiggCompact"}
        %a{:href => "http://twitter.com/share", :class => "twitter-share-button", :'data-count' => "horizontal", :'data-url' => "http://meh-promo.heroku.com"}
          Tweet
        %iframe{:src => "http://www.facebook.com/plugins/like.php?href=http%3A%2F%2Fmeh-promo.heroku.com&amp;layout=button_count&amp;show_faces=false&amp;width=100&amp;action=like&amp;font=verdana&amp;colorscheme=light&amp;height=80",
                :id => "facebook_like_button"}
      %p
        = link_to image_tag("todo_list.png"), pages_features_path
    %div#left_side
      %p#logo
        = link_to image_tag("meh_logo.png"), root_path
      %p#slogan
        %strong
          Meh saves you time by helping you after you've made a sale.
      = yield

